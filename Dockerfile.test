# Extremely minimal Dockerfile for testing
# Uses no system packages at all, only pip

FROM nvcr.io/nvidia/l4t-pytorch:r32.7.1-pth1.10-py3

# Set environment variables
ENV DEBIAN_FRONTEND=noninteractive
ENV PYTHONUNBUFFERED=1
ENV QT_X11_NO_MITSHM=1
ENV DISPLAY=:0

# Set working directory
WORKDIR /app

# Create required directories
RUN mkdir -p /app/logs /app/data /app/models

# Install git (required for installing from GitHub)
RUN apt-get update && \
    apt-get install -y --no-install-recommends git && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# Install packages using only pip (no apt)
RUN pip3 install --no-cache-dir \
    opencv-python-headless \
    pillow \
    numpy \
    pyserial \
    torch \
    torchvision \
    matplotlib \
    pyyaml \
    requests \
    pandas \
    seaborn \
    # Install ultralytics from GitHub for ARM64 compatibility
    git+https://github.com/ultralytics/ultralytics.git@v8.0.196

# Copy application files
COPY . .

# Set permissions
RUN chmod +x *.py

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s \
    CMD python3 -c "import cv2; print('OpenCV OK')" || exit 1

# Default command
CMD ["python3", "app.py"]
